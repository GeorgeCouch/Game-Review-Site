    </nav>
    <div class="container p-0 mt-2 shadow-lg bg-body-tertiary rounded">
      <div class="card d-flex flex-column align-items-center text-bg-secondary">
        <div class="card-body col-10">
          <div class="card mt-5 text-bg-dark">
            <div class="card-body">
              <h1 class="card-header border-light">
                <div class="d-flex justify-content-between">
                  <h1>User Reviews</h1>
                  <div class="d-flex justify-content-center align-items-center">
                    <form action="/add" method="post">
                      <button type="submit" class="btn btn-primary w-100">
                        <svg
                          id="add"
                          width="800px"
                          height="800px"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            d="M4 12H20M12 4V20"
                            stroke="#f7f7f7"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                          />
                        </svg>
                        Review
                      </button>
                    </form>
                  </div>
                </div>
              </h1>
              <ul class="list-group list-group-flush">
                <% for (let i = 0; i < userInfo.length; i++) { %> <%-
                include("partials/game.ejs", { i: i, }) %> <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
